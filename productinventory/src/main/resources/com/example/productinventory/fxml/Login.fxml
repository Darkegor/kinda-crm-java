<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.productinventory.LoginController" alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="usernameField" promptText="Enter your username" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordField" promptText="Enter your password" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Button text="Login" onAction="#handleLoginButtonAction" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.halignment="RIGHT"/>

    <Label text="------------------ OR ------------------" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER"/>

    <Label text="New Username:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="registerUsernameField" promptText="Enter new username" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="New Password:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <PasswordField fx:id="registerPasswordField" promptText="Enter new password" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Button text="Register" onAction="#handleRegisterButtonAction" GridPane.rowIndex="6" GridPane.columnIndex="1" GridPane.halignment="RIGHT"/>
</GridPane>
