<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="com.example.productinventory.ProductView" xmlns:fx="http://javafx.com/fxml" spacing="10" alignment="CENTER">
    <TextField fx:id="productNameField" promptText="Product Name" />
    <TextField fx:id="productPriceField" promptText="Product Price" />
    <TextField fx:id="productQuantityField" promptText="Product Quantity" />
    <Button fx:id="addButton" text="Add Product" onAction="#addProduct" />
    <ListView fx:id="productListView" />
    <Button text="Edit Product" onAction="#editProduct" />
</VBox>

